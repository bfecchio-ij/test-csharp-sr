@page
@using InfoJobsPoc.Client.Pages;
@model CandidatePageModel
@{
    ViewData["Title"] = "Home";
}
<section class="vh-100 w-100 h-100" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-12 col-xl-10">
                <div class="card">
                    <div class="card-header p-3">
                        <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Task List</h5>
                    </div>
                    <div class="card-body" id="candidate.render" data-mdb-perfect-scrollbar="true" >
                      
                    </div>
                    <div class="card-footer  text-end p-3">
                        <button class="me-2 btn btn-link">Cancel</button>
                        <button class="btn btn-primary">Add Task</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>